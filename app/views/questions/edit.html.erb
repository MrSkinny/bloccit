<h1>Edit Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for  Questions</p>
    <ul>
      <li>No Innapropriate Questions</li>
      <li>Don't use the word "question" in your Title</li>
      <li>Incessant <strong>#hashtag</strong> use will get you banned <strong>#lame #dontdoit</strong></li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title , class: 'form-control', placeholder: "Enter Question title here" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter Question here"%>
      </div>
      <div class="form-group">
        <%= f.label :resolved %>
        <%= f.check_box :resolved %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
