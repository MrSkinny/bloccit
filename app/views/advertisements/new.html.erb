<h1>New Advert.</h1>
<div class="row">
  <div class="col-md-4">
    <p>
      Guidelines for Advertising
    </p>
    <ul>
      <li>No Adult Content/Solicitation</li>
      <li>No Illegal Services/Activities</li>
      <li>Violators will be banned and will not be refunded their purchase price of the Advertisement</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |ad| %>
      <div class="form-group">
        <%= ad.label :title %>
        <%= ad.text_field :title, class: 'form-control', placeholder: 'Enter Ad title here' %>
      </div>
      <div class="form-group">
        <%= ad.label :copy %>
        <%= ad.text_area :copy, class: 'form-control', placeholder: 'Enter Ad Text Here' %>
      </div>
      <div class="form-group">
        <%= ad.label :price %>
        <%= ad.number_field :price, class: 'form-control', placeholder: 'Price', min: 1, max: 45 %>
      </div>
      <div class="form-group">
        <%= ad.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
